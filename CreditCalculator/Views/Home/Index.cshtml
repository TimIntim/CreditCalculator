@model CreditCalculator.Models.CreditCalculation

@{
  ViewData["Title"] = "Home Page";
}

<div>
  <h1 class="display-4 text-center">Кредитный калькулятор</h1>

  <form asp-action="Index" method="post" class="js-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">

      <div class="row">
        <div class="form-group col-4 my-3">
          <label asp-for="LoanAmount" class="control-label"></label>
          <div class=" input-group">
            <input asp-for="LoanAmount" 
                   class="form-control js_input-validation" 
                   placeholder="0.00" 
                   required>
            <span class="input-group-text col-1 text-center">₽</span>
            <div class="invalid-feedback my-3">Test</div>
          </div>
          <span asp-validation-for="LoanAmount" class="text-danger"></span>
        </div>
        <div class="col-3 error"></div>
      </div>

      <div class="row">
        <div class="form-group col-4 my-1">
          <label asp-for="MonthlyTerm" class="control-label"></label>
          <input asp-for="MonthlyTerm" class="form-control" placeholder="1">
          <span asp-validation-for="MonthlyTerm" class="text-danger"></span>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-4 my-1">
          <label asp-for="AnnualInterestRate" class="control-label"></label>
          <div class=" input-group">
            <input asp-for="AnnualInterestRate" class="form-control" placeholder="0.00">
            <span class="input-group-text col-1 text-center">%</span>
          </div>
          <span asp-validation-for="AnnualInterestRate" class="text-danger"></span>
        </div>
      </div>

      <div class="form-group col-4 mt-3">
          <input type="submit" value="Рассчитать" class="btn btn-primary" id="js-validation"/>
      </div>
    </div>
  </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}